                                            </p>
                                            <div class="product-link-2 position-static">
                                                <a href="#" data-toggle="tooltip" title="Wishlist"><i class="ion-android-favorite-outline"></i></a>
                                                <a href="#" data-toggle="tooltip" title="Add To Cart"><i class="ion-bag"></i></a>
                                                <a href="#" data-toggle="modal" data-target="#quick_view">
                                                    <span data-toggle="tooltip"
                                                          title="Quick View"><i class="ion-ios-eye-outline"></i></span>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- product list item start -->
                                </div>
                            }

                            <!-- start pagination area -->
                            <div class="paginatoin-area text-center mt-45">
                                <ul class="pagination-box">






                                    <a asp-controller="shop" asp-action="index" asp-route-page="@(ViewBag.CurrentPage-1)" style="pointer-events:@(ViewBag.Currentpage == 1 ? "none" : "");" class="previous page-numbers" title="Pervious Page"><i class="fa-solid fa-angle-left"></i></a>
                                    @for (int i = 1; i < ViewBag.TotalPage; i++)
                                    {
                                        <a class="page-numbers " style="pointer-events:@(ViewBag.CurrentPage == i ? "block" : "");" asp-controller="shop" asp-action="index" asp-route-page="@i">@i</a>

                                    }
                                    <a asp-controller="shop" asp-action="index" asp-route-page="@(ViewBag.CurrentPage +1)" class="next page-numbers" title="Next Page"><i class="fa-solid fa-angle-right"></i></a>














                                </ul>
                            </div>
                            <!-- end pagination area -->
                        </div>
                    </div>
                    <!-- shop main wrapper end -->
                </div>
            </div>
        </div>
    </div>
    <!-- page main wrapper end -->
</main>
